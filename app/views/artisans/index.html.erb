<%= render 'shared/page_title', title: "Showing all artisans" %>

<div align="center">
    <%= will_paginate %>
    <% @artisans.each do |artisan| %>
    <ul class="listing">
    <div class="row">
        <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(artisan), artisan_path(artisan) %></li>
        <li class="artisan-title"><%= link_to artisan.name.capitalize, artisan_path(artisan) %></li>
            <li><small><%= pluralize(artisan.handcrafts.count, "handcraft") if artisan.handcrafts %></small></li>
        </div>
    </div>
    </ul>      
    <% end %>
    <%= will_paginate %>
</div>