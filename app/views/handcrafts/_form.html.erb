<%= render 'shared/errors', obj: @handcraft %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@handcraft, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name, "Nome" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Nome do artesanato", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description, "Descrição" %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control justify-text", placeholder: "Descreva sobre o artesanato" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <%= f.collection_check_boxes :material_ids, Material.all, :id, :name do |cb| %>
                    <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                <% end %>
            </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@handcraft.new_record? ? "Criar meu artesanato" : "Atualizar meu artesanato", class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-6 col-md-offset-4 colormatch">
      [ <%= link_to "Cancelar a solicitação e retornar para a lista de artesanatos", handcrafts_path %> ]
    </div>
  </div>
</div>