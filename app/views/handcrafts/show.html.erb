<%= render 'shared/page_title', title: @handcraft.name %>

<div class="well col-md-8 col-md-offset-2">
    <h4 class="center description"><strong> Description: </strong></h4>
    <hr />
    <%=simple_format(@handcraft.description) %>
    <hr />
    <div class="pull-right">
        <p class="center">
            <em>Created by:</em>
        </p>
        <p class="center">
            <%= link_to gravatar_for(@handcraft.artisan), handcraft_path %>
        </p>
        <p class="center">
            <small> <%= @handcraft.artisan.name.capitalize %></small>
            <div class="pull-right">
                <%= time_ago_in_words(@handcraft.created_at)%> ago
            </div>
        </p>
    </div>    
</div>