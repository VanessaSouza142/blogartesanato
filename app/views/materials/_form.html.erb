<%= render 'shared/errors', obj: @material %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@material, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name, "Nome" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Nome do material", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@material.new_record? ? "Criar material" : "Atualizar material", class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-6 col-md-offset-4 colormatch">
      [ <%= link_to "Cancelar a solicitação e retornar para a lista de artesanatos", handcrafts_path %> ]
    </div>
  </div>
</div>